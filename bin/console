#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Pianissimo\Component\Core\Core;
use Symfony\Component\Console\Application;

$core = new Core();
$commands = $core->getCommands();

$app = new Application();

foreach ($commands as $command) {
    $app->add(new $command());
}

$app->run();